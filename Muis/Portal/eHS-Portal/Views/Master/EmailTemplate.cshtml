@model eHS.Portal.Model.EmailTemplate;

@{
  ViewData["Title"] = "Email Template";
}

@section CSS {
  <link rel="stylesheet" href="~/plugins/select2/select2.min.css" />
  <link rel="stylesheet" href="~/css/master/emailTemplate.css" />
}

@section NavbarTitle {
  <div class="page-header">
    <h4 class="page-title">Email Template</h4>
  </div>
}

@section Toolbar {
  <div class="quick-link-wrapper">
    <ul class="quick-links ml-auto">
      <li><a id="save" href="javascript:void(0)">Save</a></li>
    </ul>
  </div>
}

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="form-group horizontal  master-type">
          <strong class="col-form-label">Type: </strong>
          <div class="col-form-field col-md-6 col-sm-8 col-xs-12">
            <select id="emailTypeSelect" class="select-single select2-hidden-accessible" style="width: 100%;" aria-hidden="true">
              <option value="100">Rejection</option>
              <option value="200">New Account</option>
              <option value="201">Reset Password</option>
              <option value="300">Audit Inspection</option>
              <option value="301">Reschedule Audit Inspection</option>
              <option value="400">Show Cause</option>
              <option value="401">Warning</option>
              <option value="402">Compound</option>
              <option value="403">Suspension</option>
              <option value="404">Immediate Suspension</option>
              <option value="405">Revocation</option>
            </select>
          </div>
        </div>
        <hr />
        <div class="form-group horizontal  master-type">
          <strong class=" col-form-label" style="width:66px !important">Keywords: </strong>
          <div class="col-form-label keyword">
            <p>@Model.Keyword</p>
          </div>
        </div>
        <div class="form-group horizontal from">
          <label class="col-form-label">From</label>
          <div class="col-form-field">
            <input type="text" class="form-control" id="from" maxlength="255" value="@Model.From">
            <label class="error mt-2 text-danger"></label>
          </div>
        </div>
        <div class="form-group horizontal cc">
          <label class="col-form-label">Cc</label>
          <div class="col-form-field">
            <input type="text" class="form-control" id="cc" maxlength="255" value="@Model.Cc">
            <label class="error mt-2 text-danger"></label>
          </div>
        </div>
        <div class="form-group horizontal bcc">
          <label class="col-form-label">Bcc</label>
          <div class="col-form-field">
            <input type="text" class="form-control" id="bcc" maxlength="255" value="@Model.Bcc">
            <label class="error mt-2 text-danger"></label>
          </div>
        </div>
        <div class="form-group horizontal subject">
          <label class="col-form-label">Subject</label>
          <div class="col-form-field">
            <input type="text" class="form-control" id="subject" maxlength="65" value="@Model.Title">
          </div>
        </div>
        <div class="body">
          <textarea id="tinyMce">
                    </textarea>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts
{
  <script type="text/javascript">
        app.page.model = @Html.Raw(Json.Serialize(Model));
  </script>
  <script src="~/plugins/tinymce/tinymce.min.js"></script>
  <script src="~/js/master/emailTemplate.js"></script>
  <script src="~/plugins/select2/select2.min.js"></script>
}

