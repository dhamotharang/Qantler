<div class="modal fade escalate-modal" id="EscalateModal" role="dialog" data-backdrop="static" data-keyboard="false" style="display: none;">
    <div class="modal-dialog modal-custom-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="label">Escalate</h5>
            </div>
            <div class="modal-body">
                <div class="form-group row mb-3 status-container">
                    <label class="col-sm-2 col-form-label">Status:</label>
                    <div class="col-sm-6 col-md-5">
                        <select class="select-multiple select2-hidden-accessible status" style="width:100%">
                            <option value="100">Open</option>
                            <option value="200">Closed</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <textarea name="remarks" class="form-control bg-inverse-info remarks" rows="10" maxlength="4000" required></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-outline-primary submit">Submit</button>
            </div>
        </div>
    </div>
</div>