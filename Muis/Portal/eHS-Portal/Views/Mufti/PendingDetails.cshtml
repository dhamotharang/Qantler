@model IList<eHS.Portal.Model.CertificateBatch>;

@{
    ViewData["Title"] = "Mufti";
}

@section CSS
{
    <link rel="stylesheet" href="~/plugins/datatables.net-bs4/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/plugins/datatables.net-select-bs4/select.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/css/mufti/details.css" />
}

@section NavbarTitle {
    <div class="page-header">
        <h4 class="page-title">Pending for Acknowledgement</h4>
    </div>
}

@section Toolbar {
    <div class="quick-link-wrapper">
        <ul class="quick-links ml-auto">
            <ul class="quick-links ml-auto">
                <li><a id="acknowledgeAllBtn" class="d-none" href="javascript:void(0)">Acknowledge All</a></li>
            </ul>
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive fixed-height">
                    <table id="listing" class="table hover">
                        <thead>
                            <tr>
                                <th>Scheme</th>
                                <th>Type</th>
                                <th>Customer</th>
                                <th>Premise</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tfoot />
                        <tbody />
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        app.page.model = @Html.Raw(Json.Serialize(Model));
    </script>
    <script src="~/plugins/datatables.net/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables.net-select/dataTables.select.min.js"></script>
    <script src="~/plugins/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/plugins/datatables.net-scroller/dataTables.scroller.min.js"></script>
    <script src="~/js/mufti/detailsPending.js"></script>
}