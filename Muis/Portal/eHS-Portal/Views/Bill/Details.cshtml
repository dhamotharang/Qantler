@using eHS.Portal.Model;

@model eHS.Portal.Models.Bill.DetailsModel;

@{ ViewData["Title"] = "Invoice Details"; }

@section CSS {
  <link rel="stylesheet" href="~/plugins/datatables.net-bs4/dataTables.bootstrap4.css" />
  <link rel="stylesheet" href="~/plugins/fullcalendar/fullcalendar.min.css" />
  <link rel="stylesheet" href="~/plugins/select2/select2.min.css" />
  <link rel="stylesheet" href="~/plugins/select2-bootstrap-theme/select2-bootstrap.min.css" />
  <link rel="stylesheet" href="~/plugins/tempusdominus-bootstrap-4/tempusdominus-bootstrap-4.min.css" />
  <link rel="stylesheet" href="~/plugins/bootstrap-datepicker/bootstrap-datepicker.min.css" />
  <link rel="stylesheet" href="~/plugins/font-awesome/css/font-awesome.min.css" />
}

@section NavbarTitle {
  <div class="page-header">
    <h4 class="page-title">Invoice Details</h4>
  </div>
}

<div class="row invoices">
  <div class="col-md-12 grid-margin">
    <div class="card">
      <div class="card-body">
        <div class="invoice info" id="info-invoiceNo">
          <div>
            <p><b>Invoice No:</b>&nbsp;<span id="invoiceIssuedID"></span></p>
          </div>
          <div class="action"></div>
        </div>
        <div class="invoice info" id="info-issuedOn">
          <div>
            <p><b>Issued On:</b>&nbsp;<span id="invoiceIssuedOn"></span></p>
          </div>
          <div class="action"></div>
        </div>
        <div class="invoice header">
          <div class="sno">
            <p></p>
          </div>
          <div class="text">
            <p>Fee Type</p>
          </div>
          <div class="qty">
            <p>Qty</p>
          </div>
          <div class="unitPrice">
            <p>Unit Price</p>
          </div>
          <div class="fee">
            <p>Fee</p>
          </div>
          <div class="gst">
            <p>GST(<span id="invoiceGST"></span>%)</p>
          </div>
          <div class="total">
            <p>Total</p>
          </div>
        </div>
        <div id="invoiceBody"></div>
        <div class="invoice footer sub">
          <p><span id="invoiceAmountType"></span></p>
          <p class="value"><span id="invoiceAmount"></span></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="invoiceSection" hidden>
  <div class="invoice section">
    <div class="sno">
      <p></p>
    </div>
    <div class="text">
      <p>{section}</p>
    </div>
    <div class="qty">
      <p></p>
    </div>
    <div class="unitPrice">
      <p></p>
    </div>
    <div class="fee">
      <p></p>
    </div>
    <div class="gst">
      <p></p>
    </div>
    <div class="total">
      <p></p>
    </div>
  </div>
</div>
<div id="invoiceItem" hidden>
  <div class="invoice item">
    <div class="sno">
      <p>{invoiceItemSNo}</p>
    </div>
    <div class="text">
      <p>{invoiceItemText}</p>
    </div>
    <div class="qty">
      <p>{invoiceItemQty}</p>
    </div>
    <div class="unitPrice">
      <p>{invoiceItemUnitPrice}</p>
    </div>
    <div class="fee">
      <p>{invoiceItemFee}</p>
    </div>
    <div class="gst">
      <p>{invoiceItemGST}</p>
    </div>
    <div class="total">
      <p>{invoiceItemTotal}</p>
    </div>
  </div>
</div>

@section Scripts
{
  <script type="text/javascript">
      app.page.id = @Model.ID;
      app.page.model = @Html.Raw(Json.Serialize(@Model.Data));
  </script>
  <script src="~/plugins/datatables.net/jquery.dataTables.js"></script>
  <script src="~/plugins/datatables.net-bs4/dataTables.bootstrap4.js"></script>
  <script src="~/plugins/datatables.net-scroller/dataTables.scroller.min.js"></script>
  <script src="~/plugins/fullcalendar/fullcalendar.min.js"></script>
  <script src="~/plugins/select2/select2.min.js"></script>
  <script src="~/plugins/jquery-file-upload/jquery.uploadfile.min.js"></script>
  <script src="~/js/calendar.js"></script>
  <script src="~/js/shared/_selectOfficer.js"></script>
  <script src="~/plugins/tempusdominus-bootstrap-4/tempusdominus-bootstrap-4.js"></script>
  <script src="~/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>

  <script src="~/js/bill/details.js"></script>
}