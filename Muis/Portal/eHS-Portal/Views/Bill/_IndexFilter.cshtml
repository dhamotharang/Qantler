<div class="modal fade filter" id="filterModal" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Advanced Filter</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form">
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">ID</label>
            <div class="col-sm-9">
              <input id="filterID" type="text" class="form-control form-control-lg" maxlength="10">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Type</label>
            <div class="col-sm-9">
              <select id="filterType" class="select-single select2-hidden-accessible" style="width:100%" aria-hidden="true">
                <option></option>
                <option value="0">Stage 1</option>
                <option value="1">Stage 2</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Invoice No</label>
            <div class="col-sm-9">
              <input id="filterInvoiceNo" type="text" class="form-control form-control-lg" maxlength="10">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Customer</label>
            <div class="col-sm-9">
              <input id="filterName" type="text" class="form-control form-control-lg" maxlength="36">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Reference ID</label>
            <div class="col-sm-9">
              <input id="filterReferenceID" type="text" class="form-control form-control-lg" maxlength="150">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Status</label>
            <div class="col-sm-9">
              <select id="filterStatus" class="select-single select2-hidden-accessible" style="width:100%" aria-hidden="true">
                <option value="100">Draft</option>
                <option value="200">Pending</option>
                <option value="300">Paid</option>
                <option value="400">Overdue</option>
                <option value="500">Canceled</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">From</label>
            <div class="col-sm-9">
              <div id="datepicker-from" class="input-group date datepicker">
                <input type="text" class="form-control">
                <span class="input-group-addon input-group-append border-left">
                  <span class="mdi mdi-calendar input-group-text"></span>
                </span>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">To</label>
            <div class="col-sm-9">
              <div id="datepicker-to" class="input-group date datepicker">
                <input type="text" class="form-control">
                <span class="input-group-addon input-group-append border-left">
                  <span class="mdi mdi-calendar input-group-text"></span>
                </span>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="filterApplyButton" type="button" class="btn btn-outline-primary">Apply</button>
        <button id="filterClearButton" type="button" class="btn btn-outline-secondary">Clear</button>
        <button id="filterResetButton" type="button" class="btn btn-outline-secondary">Reset</button>
        <button id="filterCloseButton" type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>