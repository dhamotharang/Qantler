@using Newtonsoft.Json
@using Newtonsoft.Json.Serialization

@{
  ViewData["Title"] = "Create Cluster";
}

@section CSS {
  <link rel="stylesheet" href="~/plugins/datatables.net-bs4/dataTables.bootstrap4.css" />
  <link rel="stylesheet" href="~/plugins/select2/select2.min.css" />
  <link rel="stylesheet" href="~/plugins/select2-bootstrap-theme/select2-bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/shared/_map.css" />

  <link rel="stylesheet" href="~/css/request/details.css" />
  <link href="~/css/cluster/index.css" rel="stylesheet" />
}

@section NavbarTitle {
  <div class="page-header">
    <h4 class="page-title">Create Cluster</h4>
  </div>
}

@section Toolbar {
  <div class="quick-link-wrapper">
    <ul class="quick-links ml-auto">
      <li><a id="saveButton" class="saveClusterBtn" href="javascript:void(0)">Save</a></li>
    </ul>
  </div>
}

<form id="form1" name="form1">
  <div class="row">
    <div class="col-md-8">
      <partial name="_clusterDetails.cshtml" />
      <div class="row">
        <partial name="_nodes.cshtml" />
      </div>
    </div>

    <div class="col-md-4">
      <div class="row">
        <div class="col-md-12 grid-margin">
        </div>
      </div>
    </div>
  </div>
</form>

@section Scripts
{
  <script type="text/javascript">
        app.page.model = @Html.Raw(Json.Serialize(Model));
  </script>
  <link href="~/css/shared/jquery-ui.css" rel="stylesheet" />
  <script src="~/js/plugins/jquery-1.12.4.js"></script>
  <script src="~/js/plugins/jquery-ui.js"></script>
  <script src="~/plugins/datatables.net/jquery.dataTables.js"></script>
  <script src="~/plugins/datatables.net-bs4/dataTables.bootstrap4.js"></script>
  <script src="~/plugins/datatables.net-scroller/dataTables.scroller.min.js"></script>
  <script src="~/plugins/select2/select2.min.js"></script>
  <script src="~/js/shared/_map.js"></script>

  <script src="~/js/cluster/_clusterDetails.js"></script>
  <script src="~/js/cluster/_nodes.js"></script>
}