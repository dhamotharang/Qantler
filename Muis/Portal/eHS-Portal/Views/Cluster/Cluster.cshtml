@using Newtonsoft.Json
@using Newtonsoft.Json.Serialization
@model eHS.Portal.Models.Cluster.ClusterModel

@{
  ViewData["Title"] = "Cluster";
}

@section CSS {
  <link rel="stylesheet" href="~/plugins/datatables.net-bs4/dataTables.bootstrap4.css" />
  <link rel="stylesheet" href="~/plugins/datatables.net-select-bs4/select.bootstrap4.min.css" />
  <link rel="stylesheet" href="~/plugins/select2/select2.min.css" />
  <link rel="stylesheet" href="~/plugins/select2-bootstrap-theme/select2-bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/cluster/clusterDataTable.css" />
  <link rel="stylesheet" href="~/css/shared/_map.css" />
}

@section NavbarTitle {
  <div class="page-header">
    <h4 class="page-title">Cluster</h4>
  </div>
}

@section Toolbar {
  <div class="quick-link-wrapper">
    <ul class="quick-links ml-auto">
      <li><a id="newButton" class="newClusterBtn" href="javascript:void(0)">New</a></li>
     <li><a id="mapBtn" data-toggle="modal" href="javascript:void(0)" data-target="#clusterMapModal">Overview</a></li> 
    </ul>
  </div>
}


<div class="row">
  <div class="col-12 grid-margin">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive bg-white">
          <table id="Clisting" class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th style="padding-bottom: 0px;">
                  Postal Sector <br />
                  <span style=" font-size:0.80rem; font-weight: normal;">(1st 2 digits of 6-digit postal codes)</span>
                </th>
                <th>General Location</th>
                <th>Action</th>
              </tr>
            </thead>
            <tfoot />
            <tbody />
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<partial name="_clusterMap.cshtml" />

@section Scripts
{
  <script type="text/javascript">
        app.page.model = @Html.Raw(Json.Serialize(Model));
  </script>
  <script src="~/plugins/datatables.net/jquery.dataTables.js"></script>
  <script src="~/plugins/datatables.net-select/dataTables.select.min.js"></script>
  <script src="~/plugins/datatables.net-bs4/dataTables.bootstrap4.js"></script>
  <script src="~/plugins/datatables.net-scroller/dataTables.scroller.min.js"></script>
  <script src="~/plugins/select2/select2.min.js"></script>
  <script src="~/js/shared/_map.js"></script>

  <script src="~/js/cluster/Index.js"></script>
}
