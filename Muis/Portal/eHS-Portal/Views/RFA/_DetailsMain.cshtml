@model eHS.Portal.Model.RFA;

<div class="card main">
    <div class="card-body">
        <h5 class="font-weight-bold mb-4">RFA Details</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-1 display-info id">
                    <strong>RFA # :</strong>
                    <span>@Model.ID</span>
                </div>
                <div class="mb-1 display-info status">
                    <strong>Status :</strong>
                    <span>@Model.StatusText</span>
                </div>
                <div class="mb-1 display-info">
                    <strong>Request # :</strong>
                    <span>@Model.RequestID</span>
                    <a class="btn btn-inverse-primary btn-rounded px-2 py-1 ml-2" href="/request/details/@Model.RequestID">View Details</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-1 display-info raisedBy">
                    <strong>Raised By :</strong>
                    <span>@Model.RaisedByName</span>
                </div>
                <div class="mb-1 display-info createdOn">
                    <strong>Raised On :</strong>
                    <span></span>
                </div>
                <div class="mb-1 display-info dueOn">
                    <strong>Due On :</strong>
                    <span></span>
                </div>
            </div>
        </div>
    </div>
</div>