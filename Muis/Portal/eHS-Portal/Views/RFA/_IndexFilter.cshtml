<div class="modal fade filter" id="filterModal" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Advanced Filter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">RFA #</label>
                        <div class="col-sm-9">
                            <input id="filterID" type="text" class="form-control form-control-lg" maxlength="10">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Customer</label>
                        <div class="col-sm-9">
                            <input id="filterCustomer" type="text" class="form-control form-control-lg" maxlength="150">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Raised On</label>
                        <div class="col-sm-9">
                            <div id="datepicker-raisedOn" class="input-group date datepicker">
                                <input type="text" class="form-control">
                                <span class="input-group-addon input-group-append border-left">
                                    <span class="mdi mdi-calendar input-group-text"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Due On</label>
                        <div class="col-sm-9">
                            <div id="datepicker-dueOn" class="input-group date datepicker">
                                <input type="text" class="form-control">
                                <span class="input-group-addon input-group-append border-left">
                                    <span class="mdi mdi-calendar input-group-text"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Status</label>
                        <div class="col-sm-9">
                            <select id="filterStatusSelect" class="select-multiple select2-hidden-accessible" multiple="multiple" style="width:100%" aria-hidden="true">
                                <option value="1">Draft</option>
                                <option value="100">Open</option>
                                <option value="200">PendingReview</option>
                                <option value="300">Closed</option>
                                <option value="400">Expired</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Raised By</label>
                        <div class="col-sm-9">
                            <select id="filterUserSelect" class="select-single select2-hidden-accessible" style="width:100%" aria-hidden="true">
                                <option></option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="filterApplyButton" type="button" class="btn btn-outline-primary">Apply</button>
                <button id="filterClearButton" type="button" class="btn btn-outline-secondary">Clear</button>
                <button id="filterResetButton" type="button" class="btn btn-outline-secondary">Reset</button>
                <button id="filterCloseButton" type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>