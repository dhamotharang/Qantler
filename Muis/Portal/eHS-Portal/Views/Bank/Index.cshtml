@model eHS.Portal.Models.Bank.IndexModel;

@{
    ViewData["Title"] = "Bank";
}

@section CSS {
    <link rel="stylesheet" href="~/plugins/datatables.net-bs4/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/plugins/datatables.net-select-bs4/select.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/plugins/select2/select2.min.css" />
    <link rel="stylesheet" href="~/plugins/select2-bootstrap-theme/select2-bootstrap.min.css" />
    <link rel="stylesheet" href="~/plugins/bootstrap-datepicker/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="~/css/bank/index.css" />
}

@section NavbarTitle {
    <div class="page-header">
        <h4 class="page-title">Bank</h4>
        <div class="quick-link-wrapper">
            <ul class="quick-links">
            </ul>
        </div>
    </div>
}

@section Toolbar {
    <div class="quick-link-wrapper">
        <ul class="quick-links ml-auto">
            <ul class="quick-links ml-auto">
                <li><a id="filterButton" data-toggle="modal" data-target="#filterModal" href="javascript:void(0)">Advanced Filter</a></li>
            </ul>
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive fixed-height">
                    <table id="listing" class="table hover">
                        <thead>
                            <tr>
                                <th>Account No</th>
                                <th>Account Name</th>
                                <th>Branch Code</th>
                                <th>Bank Name</th>
                                <th>DDA Status</th>
                            </tr>
                        </thead>
                        <tfoot />
                        <tbody />
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_IndexFilter.cshtml" />

@section Scripts
{
    <script type="text/javascript">
        app.page.model = @Html.Raw(Json.Serialize(Model));
    </script>
    <link href="~/css/shared/jquery-ui.css" rel="stylesheet" />
    <script src="~/js/plugins/jquery-1.12.4.js"></script>
    <script src="~/js/plugins/jquery-ui.js"></script>

    <script src="~/plugins/datatables.net/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables.net-select/dataTables.select.min.js"></script>
    <script src="~/plugins/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/plugins/datatables.net-scroller/dataTables.scroller.min.js"></script>
    <script src="~/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/plugins/select2/select2.min.js"></script>
    
    <script src="~/js/bank/index.js"></script>
    <script src="~/js/bank/_indexFilter.js"></script>
}