<div class="modal fade filter" id="filterModal" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Advanced Filter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Account No.</label>
                        <div class="col-sm-9">
                            <input id="filterAccountNo" type="text" class="form-control form-control-lg" maxlength="30">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Account Name</label>
                        <div class="col-sm-9">
                            <input id="filterAccountName" type="text" class="form-control form-control-lg" maxlength="150">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Branch Code</label>
                        <div class="col-sm-9">
                            <input id="filterBranchCode" type="text" class="form-control form-control-lg" maxlength="100">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Bank Name</label>
                        <div class="col-sm-9">
                            <select id="filterBankName" class="select-single select2-hidden-accessible" style="width:100%" aria-hidden="true">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">DDA Status</label>
                        <div class="col-sm-9">
                            <select id="filterDDAStatus" class="select-single select2-hidden-accessible" style="width:100%" aria-hidden="true">
                                <option></option>
                                <option value="100">Default</option>
                                <option value="200">Approved</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="filterApplyButton" type="button" class="btn btn-outline-primary">Apply</button>
                <button id="filterClearButton" type="button" class="btn btn-outline-secondary">Clear</button>
                <button id="filterResetButton" type="button" class="btn btn-outline-secondary">Reset</button>
                <button id="filterCloseButton" type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>