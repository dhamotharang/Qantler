@model eHS.Portal.DTO.AuthParam;

@{ Layout = "_Empty";
                ViewData["Title"] = "Change Password"; }

@section CSS {
    <link rel="stylesheet" href="~/css/home/index.css" />
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper auth p-0 theme-two">
            <div class="row d-flex align-items-stretch">
                <div class="col-md-4 banner-section d-none d-md-flex align-items-stretch justify-content-center">
                    <div class="slide-content bg-1"> </div>
                </div>
                <div class="col-12 col-md-8 h-100 bg-white">
                    <div class="auto-form-wrapper d-flex align-items-center justify-content-center flex-column">
                        <form id="form" asp-controller="home" asp-action="changePassword" method="post" autocomplete="off">
                            <img src="~/images/Login-MUIS-logo.png" alt="logo">
                            <h2 class="mr-auto">Set Password</h2>
                            <div class="form-group new-secret">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="mdi mdi-lock-outline"></i>
                                        </span>
                                    </div>
                                    <input id="newSecret" name="newSecret" asp-for="NewSecret" type="password" class="form-control form-control-lg" placeholder="New Password" maxlength="60" autocomplete="off">
                                </div>
                                <label class="error mt-2 text-danger"></label>
                            </div>
                            <div class="form-group confirm-secret">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="mdi mdi-lock-outline"></i>
                                        </span>
                                    </div>
                                    <input id="confirmSecret" name="confirmSecret" type="password" class="form-control form-control-lg" placeholder="Confirm Password" maxlength="60" autocomplete="off">
                                </div>
                                <label class="error mt-2 text-danger">Password does not match.</label>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-fw btn-lg btn-sign-in">Proceed</button>
                            </div>
                            <div class="wrapper mt-5 text-gray">
                                <p class="footer-text">Copyright © 2021 MUIS eHS. All rights reserved.</p>
                            </div>
                            <input name="__RequestVerificationToken" type="hidden" value="<removed for brevity>" />
                            <input name="provider" asp-for="Provider" type="hidden" value="@Model.Provider" />
                            <input name="key" asp-for="Key" type="hidden" value="@Model.Key" />
                            <input name="secret" asp-for="Secret" type="hidden" value="@Model.Secret" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/home/changePassword.js"></script>
}