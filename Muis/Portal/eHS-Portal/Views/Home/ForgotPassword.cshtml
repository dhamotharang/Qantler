@model eHS.Portal.DTO.AuthParam;

@{
    Layout = "_Empty";
    ViewData["Title"] = "Forgot Password";
}

@section CSS {
    <link rel="stylesheet" href="~/css/home/index.css" />
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper auth p-0 theme-two">
            <div class="row d-flex align-items-stretch">
                <div class="col-md-4 banner-section d-none d-md-flex align-items-stretch justify-content-center">
                    <div class="slide-content bg-1"> </div>
                </div>
                <div class="col-12 col-md-8 h-100 bg-white">
                    <div class="auto-form-wrapper d-flex align-items-center justify-content-center flex-column">
                        <form id="form" class="form" method="post" autocomplete="off">
                            <img src="~/images/Login-MUIS-logo.png" alt="logo">
                            <h2 class="mr-auto">Forgot Password</h2>
                            <div class="form-group key">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="mdi mdi-account-outline"></i>
                                        </span>
                                    </div>
                                    <input id="key" name="key" asp-for="Key" type="text" class="form-control form-control-lg" placeholder="Username" maxlength="88" autocomplete="off">
                                    <div class="input-group-append bg-success">
                                        <span class="input-group-text text-white">@Html.Raw("@muis.gov.sg")</span>
                                    </div>
                                </div>
                                <label class="error mt-2 text-danger">Username is required.</label>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-fw btn-lg btn-sign-in">Reset</button>
                            </div>
                            <div class="wrapper mt-5 text-gray">
                                <p class="footer-text">Copyright © 2021 MUIS eHS. All rights reserved.</p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/home/forgotPassword.js"></script>
}