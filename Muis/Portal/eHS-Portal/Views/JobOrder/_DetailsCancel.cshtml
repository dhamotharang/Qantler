<div class="modal fade cancel" id="cancelModal" role="dialog" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Cancel Job Order</h5>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-sm-3 col-lg-2 col-form-label">Reason :</label>
          <div class="col-sm-9 col-lg-5">
            <select id="cancelReasonSelect" class="select-single select2-hidden-accessible" style="width:100%">
            </select>
          </div>
        </div>
        <p>Notes (Optional):</p>
        <div class="mb-2 bg-inverse-info">
          <textarea rows="5" class="form-control bg-transparent border-0 notes" placeholder="Enter some reasons here for cancelling the job order"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-seconday" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-outline-primary primary">Save</button>
      </div>
    </div>
  </div>
</div>