<div class="modal fade" id="CertifyingBodyModal" role="dialog" aria-labelledby="exampleModalLabel" aria-modal="true" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Certifying Body</h5>
      </div>
      <div class="modal-body">
        <form class="form">
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Name</label>
            <div class="col-sm-9">
              <input id="certifyingBodyName" maxlength="255" type="text" class="form-control form-control-lg">
              <label class="error mt-2 text-danger">Name is required</label>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Status</label>
            <div class="col-sm-9">
              <select id="certifyingBodyStatus" class="select-single select2-hidden-accessible" style="width:100%" aria-hidden="true">
                <option value="0">Unrecognized</option>
                <option value="1">Recognized</option>
              </select>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="saveButton" onclick="app.page.certifyingbody.save()" type="button" class="btn btn-outline-primary">Save</button>
        <button id="cancelButton" onclick="app.page.certifyingbody.close()" type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>