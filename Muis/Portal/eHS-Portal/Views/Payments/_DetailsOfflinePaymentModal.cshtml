<div class="modal fade offlinepayment" id="offlinePaymentModal" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
            </div>
            <div class="modal-body">
                <div class="form-group horizontal account-no">
                    <label class="col-form-label">Account No. :</label>
                    <div class="col-form-field">
                        <input type="text" class="form-control" id="accountNo" required>                        
                        <label class="error mt-2 text-danger">Account no. is required.</label>
                    </div>
                </div>
                <div class="form-group horizontal account-name">
                    <label class="col-form-label">Account Name :</label>
                    <div class="col-form-field">
                        <input type="text" class="form-control" id="accountName" required>
                        <label class="error mt-2 text-danger">Account name is required.</label>
                    </div>
                </div>
                <div class="form-group horizontal branch-code">
                    <label class="col-form-label">Branch Code :</label>
                    <div class="col-form-field">
                        <input type="text" class="form-control" id="branchCode">
                    </div>
                </div>
                <div class="form-group horizontal babk-name">
                    <label class="col-form-label">Bank Name :</label>
                    <div class="col-form-field">
                        <select class="select-single select2-hidden-accessible" id="bankName" style="width:100%" required> 
                            <option></option>
                        </select>
                        <label class="error mt-2 text-danger">Bank name is required.</label>
                    </div>
                </div>
                <div class="form-group horizontal total-amount">
                    <label class="col-form-label">Amount Received :</label>
                    <div class="col-form-field">
                        <input type="text" class="form-control" id="totalAmount" required>
                        <label class="error mt-2 text-danger">Total amount is required.</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-outline-primary submit">Approve</button>
            </div>
        </div>
    </div>
</div>