<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="contactinfo card-body">
                <h5 class="font-weight-bold mb-4">Contact Info</h5>
                <div class="info row">
                    <div class="col-sm-12 col-md-6 left">
                        <p class="mb-1 item label">
                            <span class="font-weight-bold">Name:</span>
                            <span id="contactName"></span>
                        </p>
                    </div>
                    <div class="col-sm-12 col-md-6 right">
                        <div id="contactInfos"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="payment-template" hidden>
    <div class="item label">
        <p>
            <span class="font-weight-bold">{label}</span>{value}
        </p>
    </div>
    <div class="item contact">
        <p class="contact mb-1">
            <span class="badge {bg}">{label}</span>{value}
        </p>
    </div>
</div>
