<div class="modal fade compose-email" id="composeEmail" role="dialog" data-focus-on="textarea:first">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="label">Compose Email</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group horizontal to d-none">
                    <label class="col-form-label">To</label>
                    <div class="col-form-field">
                        <input type="text" class="form-control" id="to" maxlength="255" required>
                        <label class="error mt-2 text-danger" for="firstname">To is required.</label>
                    </div>
                </div>
                <div class="form-group horizontal cc d-none">
                    <label class="col-form-label">Cc</label>
                    <div class="col-form-field">
                        <input type="text" class="form-control" id="cc" maxlength="255" required>
                    </div>
                </div>
                <div class="form-group horizontal bcc d-none">
                    <label class="col-form-label">Bcc</label>
                    <div class="col-form-field">
                        <input type="text" class="form-control" id="bcc" maxlength="255" required>
                    </div>
                </div>
                <div class="form-group horizontal subject d-none">
                    <label class="col-form-label">Subject</label>
                    <div class="col-form-field">
                        <input type="text" class="form-control" id="subject" maxlength="65" required>
                        <label class="error mt-2 text-danger" for="firstname">Subject is required.</label>
                    </div>
                </div>
                <div class="body d-none">
                    <textarea id="tinyMce">
                    </textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary close" data-dismiss="modal">Discard</button>
                <button type="button" class="btn btn-outline-primary done">Done</button>
            </div>
        </div>
    </div>
</div>