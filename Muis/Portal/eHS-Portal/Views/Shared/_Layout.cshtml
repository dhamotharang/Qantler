<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - eHS Portal</title>
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/base.css" />
    <link rel="stylesheet" href="~/css/template.css" />
    <link rel="stylesheet" href="~/css/theme.css" />
    @RenderSection("CSS", required: false)
    <link rel="stylesheet" href="~/css/app.css" />
</head>
<body class="dark-theme sidebar-dark">
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <div class="navbar fixed-top">
            <div class="navbar-menu-wrapper d-flex align-items-center w-100">
                @RenderSection("NavbarTitle", required: false)
                <ul class="nav">
                </ul>
                <ul class="nav navbar-nav-right ml-auto">
                    @RenderSection("Toolbar", required: false)
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center pr-0" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </div>

        <div class="right-sidebar-toggler-wrapper">
            <div class="sidebar-toggler notification" id="notification-toggler">
                <i class="mdi mdi-bell"></i>
                <span class="indicator"></span>
            </div>
        </div>
        <partial name="_Notification.cshtml" />

        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <partial name="_LayoutMenu" />
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid clearfix">
                        <p>Copyright © 2021 MUIS eHS. All rights reserved.</p>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <script src="~/js/vendor.bundle.base.js"></script>
    <script src="~/js/plugins/off-canvas.js"></script>
    <script src="~/js/plugins/hoverable-collapse.js"></script>
    <script src="~/js/plugins/misc.js"></script>
    <script src="~/plugins/moment/moment.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script type="text/javascript">
        app.identity = {
            id: '@Html.Raw(User.FindFirstValue(ClaimTypes.NameIdentifier))',
            name: '@Html.Raw(User.FindFirstValue(ClaimTypes.Name))',
            email: '@Html.Raw(User.FindFirstValue(ClaimTypes.Email))',
            designation: '@Html.Raw(User.FindFirstValue("Designation"))',
            permissions: '@Html.Raw(User.FindFirstValue("Permissions"))'
        }
    </script>
    <script src="~/js/shared/_menu.js"></script>
    <script src="~/js/shared/_notification.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
