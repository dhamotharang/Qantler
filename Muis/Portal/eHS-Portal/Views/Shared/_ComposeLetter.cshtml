<div class="modal fade compose-letter" id="ComposeLetterModel" role="dialog" data-focus-on="textarea:first">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="label"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="body">
                    <textarea id="tinyMce"></textarea>
                    <label class="error mt-2 text-danger">Letter content is required</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary close" data-dismiss="modal">Discard</button>
            </div>
        </div>
    </div>
</div>

<div class="template action-button" hidden>
    <button data-id="{id}" type="button" class="btn btn-outline-primary action">{name}</button>
</div>