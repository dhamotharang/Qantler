<div class="modal fade create-code" id="createCodeModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="label"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row code">
                    <label class="col-sm-3 col-form-label">Code</label>
                    <div class="col-sm-9">
                        <input id="code" type="text" class="form-control form-control-lg" maxlength="36" readonly>
                    </div>
                </div>
                <div class="form-group row description">
                    <label class="col-sm-3 col-form-label">Description</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <input id="description" type="text" class="form-control form-control-lg" maxlength="255">
                        </div>
                        <label class="error mt-2 text-danger">Description is required</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="closeBtn" type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                <button id="createBtn" type="button" class="btn btn-outline-primary">Create</button>
            </div>
        </div>
    </div>
</div>