@model eHS.Portal.Model.SanctionInfo;

<div class="card main">
    <div class="card-body">
        @if (Model.Type == eHS.Portal.Model.SanctionInfoType.Final)
        {
            <h5 class="font-weight-bold mb-4">Final Decision</h5>
        }
        else
        {
            <h5 class="font-weight-bold mb-4">Recommended Action</h5>
        }
        <div class="row">
            <div class="col-md-12">
                <div class="mb-1 display-info id">
                    <strong>Action :</strong>
                    <span>@Model.SanctionText</span>
                </div>
                <div class="mb-1 display-info">
                    @if (Model.Sanction == eHS.Portal.Model.Sanction.Compound)
                    {
                        <strong>Amount :</strong>
                        <span>@Convert.ToDecimal(Model.Value).ToString("#,##0.00")</span>
                    }
                    else if (Model.Sanction == eHS.Portal.Model.Sanction.Suspension)
                    {
                        <strong>No. of Months :</strong>
                        <span>@Model.Value</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
