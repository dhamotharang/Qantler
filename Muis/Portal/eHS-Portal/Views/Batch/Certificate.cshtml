@model eHS.Portal.Models.Batch.BatchCertificateModel;

@{
    ViewData["Title"] = "Batch - Certificate";
}

@section CSS
{
    <link rel="stylesheet" href="~/plugins/datatables.net-bs4/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/plugins/datatables.net-select-bs4/select.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/plugins/print.js/print.min.css" />
    <link rel="stylesheet" href="~/css/certificate/certificate.css" />
    <link rel="stylesheet" href="~/css/batch/certificate.css" />
}

@section NavbarTitle {
    <div class="page-header">
        <h4 class="page-title">Batch - Certificate</h4>
    </div>
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive fixed-height">
                    <table id="listing" class="table hover">
                        <thead>
                            <tr>
                                <th>Batch #</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Last Action</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tfoot />
                        <tbody />
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_CertificatePreview.cshtml" />

<a id="download-link" download></a>

@section Scripts
{
    <script type="text/javascript">
        app.page.model = @Html.Raw(Json.Serialize(Model.Data));
    </script>
    <script src="~/plugins/datatables.net/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables.net-select/dataTables.select.min.js"></script>
    <script src="~/plugins/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/plugins/datatables.net-scroller/dataTables.scroller.min.js"></script>
    <script src="~/plugins/print.js/print.min.js"></script>
    <script src="~/js/shared/_printHelper.js"></script>
    <script src="~/js/certificate/templates.js"></script>
    <script src="~/js/certificate/product.js"></script>
    <script src="~/js/certificate/certificate.js"></script>
    <script src="~/js/batch/_certificatePreview.js"></script>
    <script src="~/js/batch/certificate.js"></script>
}